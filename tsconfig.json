{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "strict": true,
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "src",
    "outDir": "dist",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}
